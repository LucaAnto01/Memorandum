<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="11dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp"
    android:background="@color/memoItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/twTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memo title"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/twDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/twTitle"
            android:text="Memo description"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/twExpirationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/twDescription"
            android:text="11/01/2001"
            android:textSize="12dp"
            android:fontFamily="sans-serif"
            android:gravity="end"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>